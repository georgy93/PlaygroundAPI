{
  "AllowedHosts": "*",
  "ApiKeySettings": {
    "Key": "MySecretKey"
  },
  "ConnectionStrings": {
    "DefaultConnection": "dada", // set in docker compose or k8s manifest
    "MongoConnection": "mongodb://root:rootpass@myHost:80"
  },
  "errorHandlingSettings": {
    "showDetails": true
  },
  "JwtSettings": {
    "Secret": "abcd!1234",
    "TokenLifetime": "00:20:00"
  },
  "MongoDbSettings": {
    "DatabaseName": "PlaygroundDB",
    "SubscribeToEvents": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System.Net.Http.HttpClient": "Information"
      }
    },
    "using": [ "Serilog.Sinks.Console" ],
    "writeTo": [
      {
        "args": { "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss:fff} ({SourceContext}) [{Level}] {Message}{NewLine}{Exception}" },
        "name": "Console"
      }
    ]
  },
  "SwaggerSettings": {
    "Description": "Playground API",
    "JsonRoute": "swagger/{documentName}/swagger.json",
    "UIEndpoint": "v1/swagger.json"
  }
}